.site-navigation
  @extend $u-cf
  margin: 20px 0 10px
  display: block
  font-size: 18px

  a
    color: #888
    float: left
    padding: 3px 3% 2px
    margin: 0 2px
    border-style: solid
    border-width: $nav-border-size 0
    border-color: $light-complementary-color

    &:hover
      color: #111

    &:focus,
    &.active,
    &:active
      color: #111
      border-color: $purple


