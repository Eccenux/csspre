.menu-toggle {
    cursor: pointer;
    font-size: 0;
    height: 48px;
    margin: 0;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    width: 48px;
    background-color: $purple;
    &:hover {
        background-color: darken($purple, 5%);
    }
}

.menu-toggle:before {
    color: #fff;
    content: "\f419";
    margin-top: 16px;
}