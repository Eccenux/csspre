code
  background: #e6e6e6
  padding: 0.05em 0.2em
  border-radius: 3px
  color: $purple
  white-space: nowrap
  font-family: "Lucida Console", "Lucida Sans Typewriter", Monaco, "Bitstream Vera Sans Mono", monospace
  font-size: 1em
  -webkit-hyphens: none
  -moz-hyphens:    none
  -ms-hyphens:     none
  hyphens:         none
  line-height: 1.4
  td &,
  th &
    background: initial
    padding: initial
    border: none
    color: initial
    white-space: initial

  pre &
    display: block
    padding: 12px
    white-space: pre
    overflow: auto
    background-color: $transparent-bg
    color: initial
    border-radius: initial

pre
  border-top: 0
  margin-top: 0
  max-width: 100%
  position: relative

  &[data-type]
    &:before
      content: attr(data-type)
      display: block
      color: #fff
      background: $purple
      background: linear-gradient(135deg, transparent 9px, $purple 9px)
      font-weight: 700
      padding: 7px 0
      text-indent: 15px
      text-transform: uppercase
      font-family: "Consolas", monospace

  // overwrite content if a preprocessor is used
  &[data-csspre]
    &:before
      content: attr(data-csspre)
      background: #6a6a6a
      background: linear-gradient(135deg, transparent 9px, @background 9px)

$export-button
  position: absolute
  -webkit-transition: all 330ms cubic-bezier(0.500, -1.000, 0.500, 2.000)
  transition: all 330ms cubic-bezier(0.500, -1.000, 0.500, 2.000)
  &:hover
    -webkit-transform: scale(1.63)
    transform: scale(1.63)

.codepen-button
  @extend $export-button
  top: 3px
  right: 10px
  height: 32px

.jsbin-button
  @extend $export-button
  top: 1px
  right: 55px
  height: 36px
