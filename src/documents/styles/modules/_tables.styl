table,
th,
td
  border: 1px solid rgba(0, 0, 0, 0.1)

table
  border-collapse: collapse
  border-spacing: 0
  margin-bottom: 24px
  width: 100%

caption,
th,
td
  font-weight: normal
  text-align: left

th
  border-width: 0 1px 1px 0
  font-weight: bold

td
  border-width: 0 1px 1px 0

.table-content
  position: relative
  margin-top: ($code-head-size * 2)
  table-layout: fixed
  border-color: #444

  th
    background-color: #ccc

  td
    padding: 6px

  td,
  th
    border-color #444
    text-align: center
    height: 27px
    &.disabled
      background-color: @border-color

  caption
    color: #fff
    position: absolute
    top: -($code-head-size)
    left: 0
    right: -1px
    background: $purple
    background: linear-gradient(135deg, transparent 9px, $purple 9px)
    font-weight: 700
    padding: 5px 0 4px
    text-indent: 15px
    text-transform: uppercase
    font-family: "Consolas", monospace

  a
    display: block
    font-size: 18px
    text-decoration: none
    background-color: lighten($light-complementary-color, 25%)
    color: #000
    &:hover,
    &:focus
      background-color: $light-complementary-color
