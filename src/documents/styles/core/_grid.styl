$grid-columns = 12
$grid-gutter-size = 2%

// Common styles for grid columns
$col-common
  position: relative
  display: inline-block
  min-height: 1px
  font-size: 16px
  vertical-align: top
  margin-right: -(@font-size / 4)
  .ie7 &
    display: inline
    zoom: 1

$grid-col-class = col

for i in 1..$grid-columns
  .{$grid-col-class}-{i}
    @extend $col-common
    width: ( (100% - ((($grid-columns / i) - 1) * $grid-gutter-size)) / ($grid-columns / i) )
    margin-bottom: $grid-gutter-size
    @media screen and (max-width: 800px)
      width: 100%
      margin-left: 0 !important
      & + &
        margin-top: $grid-gutter-size

    & + &
      margin-left: $grid-gutter-size
    if i == 2 || 4
      & + .{$grid-col-class}-{$grid-columns - i}
        margin-left: $grid-gutter-size
    if i == 6
      p + & + .{$grid-col-class}-{i} + .{$grid-col-class}-{i},
      &:first-child + .{$grid-col-class}-{i} + .{$grid-col-class}-{i}
          margin-left: 0
